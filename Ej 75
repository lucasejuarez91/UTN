#include <stdio.h>
#include <stdlib.h>

int main()
{
int i;
int j;
int jubil;
int obr_soc;
int suel_bas;
int suel_net;
int legMax;
int bAntigMax;
int bon_antig;
int leg;
int tempLeg;
int tempBon_antig;
int tempjubil;
int tempobr_soc;
int tempS_bas;
int tempsuel_net;



	for(i=0;i<30;i++){
		printf("Ingrese Nro de legajo:\n");
		scanf("%d",&leg[i]);
		printf("Ingrese Sueldo Basico:\n");
		scanf("%f",&suel_bas[i]);
		printf("Ingrese Bonificacion por antiguedad:\n");
		scanf("%f",&bon_antig[i]);
		//descuentos
		jubil[i] = ((suel_bas*16)/100);
		obr_soc[i] = ((suel_bas*4.5)/100);
		suel_net[i] = (suel_bas[i]-jubil[i]-obr_soc[i]+bon_antig[i]);
		if(i==0){
			legMax = leg[i];
			bAntigMax = bon_antig[i];
		}
		
		if(bAntigMax > bon_antig[i]){
			legMax = leg[i];
			bAntigMax = bon_antig[i];
		}
	}
		system("CLS");
		printf("Vector Original");
		for(i=0;i<30;i++){
			printf("Nro Legajo\tSueldo Básico\tJubilacion\tObra social\tAntigüedad\tSueldo neto");
			printf("%d\t%f\t%f\t%f\t%f\t%f\n",leg[i],suel_bas[i],jubil[i],obr_soc[i],bon_antig[i],suel_net[i]);
		}
		system("CLS");
		printf("El obrero %d tuvo mayor bonificacion por antiguedad con %.2f",legMax,bAntigMax);
		
				for (i = 0; i < 30; i++) 
				  { 
					for (j = i + 1; j < 30; j++) 
					{ 
					  if (suel_net[j] < suel_net[i]) 
					  { 
						tempLeg = leg[j]; 
						leg[j] = leg[i]; 
						leg[i] = tempLeg;
						
						tempS_bas = suel_bas[j]; 
						suel_bas[j] = suel_bas[i]; 
						suel_bas[i] = tempS_bas;
						
						tempBon_antig = bon_antig[j]; 
						bon_antig[j] = bon_antig[i]; 
						bon_antig[i] = tempBon_antig; 
						
						tempjubil = jubil[j]; 
						jubil[j] = jubil[i]; 
						jubil[i] = tempjubil; 
						
						tempobr_soc = obr_soc[j]; 
						obr_soc[j] = obr_soc[i]; 
						obr_soc[i] = tempobr_soc; 
						
						tempLeg = leg[j]; 
						leg[j] = leg[i]; 
						leg[i] = tempLeg; 
						
						tempsuel_net = suel_net[j]; 
						suel_net[j] = suel_net[i]; 
						suel_net[i] = tempsuel_net;   
					  } 
					} 
				  } 
		system("CLS");	  
			printf("Vector Ordenado");
			for(i=0;i<30;i++){
			printf("Nro Legajo\tSueldo Básico\tJubilacion\tObra social\tAntigüedad\tSueldo neto");
			printf("%d\t%f\t%f\t%f\t%f\t%f\n",leg[i],suel_bas[i],jubil[i],obr_soc[i],bon_antig[i],suel_net[i]);
			}
}
