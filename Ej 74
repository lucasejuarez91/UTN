#include <stdio.h>
#include <stdlib.h>
#define max 39

int main () {

	int micros[max];
	float recaud[max];
	float kms[max];
        int i;
	
		for(i=0;i<40;i++){
			printf("Ingrese Numero de micro:\n");
			scanf("%d",&micros[i]);
			printf("Ingrese recaudacion:\n");
			scanf("%f",&recaud[i]);
			printf("Ingrese Kms recorridos:\n");
			scanf("%f",&kms[i]);
		
	}
                printf("N. micro\tRecaudacion\tKms Recorridos\n");
		for(i=0;i<40;i++){
			printf("%d\t\t%.2f\t\t%.2f\n",micros[i],recaud[i],kms[i]);
			
		}

}
