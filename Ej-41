// Ejercicio 41

#include <stdio.h>
#include <stdlib.h>

int main() {
    
  int i;int min; int max;int num;  
    
 for (i=0;i < 4; i++) {
     printf("Ingrese un numero:\n");
     scanf("%d",&num);
     if(i == 0) {
          min = num;
          max = num;
          }
     if(num < min) {
            min = num;
     } else if( num > max) {
            max = num;
     }
 }

 printf("El numero mayor ingresado es:%d\n",max);
  system("pause");    
}
